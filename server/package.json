{
  "name": "frourio-app-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run migrate:dev && run-p dev:*",
    "dev:server": "webpack --watch --mode=development",
    "dev:frourio": "frourio --watch",
    "dev:prisma": "prisma generate --watch",
    "prebuild": "npm run generate",
    "build": "webpack --mode=production",
    "generate": "run-p generate:*",
    "generate:frourio": "frourio",
    "generate:prisma": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "start": "cross-env NODE_ENV=production node index.js"
  },
  "dependencies": {
    "@prisma/client": "^2.22.1",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.12.0",
    "fastify-cookie": "^5.3.0",
    "fastify-cors": "^5.2.0",
    "fastify-csrf": "^3.0.1",
    "fastify-helmet": "^5.2.0",
    "fastify-jwt": "^2.3.0",
    "fastify-multipart": "^4.0.0",
    "fastify-static": "^4.0.1"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.3",
    "cross-env": "^7.0.3",
    "frourio": "^0.24.1",
    "nodemon-webpack-plugin": "^4.4.4",
    "npm-run-all": "^4.1.5",
    "prisma": "^2.22.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "~4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  }
}
